<%= form_tag(posts_path, :method => "get", class: " my-12 my-lg-0") do %>
    <div class="form-group row">
      <div class="text-center">
        <%= text_field :search, params[:search], placeholder: "Search", class: 'form-control' %>
        <%= submit_tag "Search", class: 'btn ' do %>
            <b><i class="fa fa-search" aria-hidden="true"></i> Search</b>
        <% end %>
      </div>
    </div>
    <table class="table">
    	<thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Votes Number</th>
      <th>Replies Number</th>
      <th>Asked</th>
    </tr>
  </thead>
		  <tbody>
		    <% @last_10_posts.each do |post| %>
		      <tr>
		        <td><%= link_to post.body.blank? ? post.keywords : post.body, post_path(post) %></td>
		        <td><%= post.user.name %></td>
		        <td><%= post.vote_number %></td>
		        <td><%= post.count_reply(post.id) %></td>
		        <td><%= time_ago_in_words post.created_at %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>

<% end %>