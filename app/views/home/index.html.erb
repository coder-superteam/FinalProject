<%= form_tag(posts_path, :method => "get", class: " my-12 my-lg-0") do %>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 text-center">
        <h1>What are you searching for?</h1>
        <div class="form-group">
          <%= text_field :search, params[:search], placeholder: "", class: 'form-control', style: "text-align:center;" %>
          <%= submit_tag "Search", class: 'btn btn-primary ' do %>
              <b><i class="fa fa-search" aria-hidden="true"></i> Search</b>
          <% end %>
        </div>
      </div>
    </div>
<% end %>
<br>
<% @last_10_posts.each do |post| %>
    <%= render partial: 'layouts/card', locals: {post: post} %>
<% end %>


