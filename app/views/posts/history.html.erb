<h1>Posts</h1>

<div class="box-shadow">
  <table class="table">
    <thead>
    <tr>
      <th>Title</th>
      <th>Language</th>
      <th>Created</th>
    </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post_path(post) %></td>
          <td><%= post.language %></td>
          <td><%= post.created_at %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>