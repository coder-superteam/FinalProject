<h1>Posts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Language</th>
      <th>User</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.language %></td>
        <td><%= post.user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New post', new_post_path %>
